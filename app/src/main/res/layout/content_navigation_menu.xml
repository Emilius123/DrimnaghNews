<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_navigation_menu"
        tools:context=".navigation_menu">

    <ImageView
            android:layout_width="324dp"
            android:layout_height="168dp" app:srcCompat="@drawable/drimnagh"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Developed by INPUT"
            android:layout_width="294dp"
            android:layout_height="39dp" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center" android:textSize="12sp"
            android:textStyle="bold" android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="UPCOMING EVENTS"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:id="@+id/upcoming_events" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.503"
    />
    <Button
            android:text="SCHOOL NEWS"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:id="@+id/school_news" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.514" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/upcoming_events"/>
    <Button
            android:text="SPORT NEWS"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:id="@+id/sport_news" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/school_news"
            app:layout_constraintHorizontal_bias="0.503"/>
    <Button
            android:text="SCHOOL TRIPS"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:id="@+id/school_trips" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sport_news"
            app:layout_constraintHorizontal_bias="0.521"/>
</android.support.constraint.ConstraintLayout>